<Window x:Class="PermDynamics.View.ArchiveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PermDynamics.View"
        mc:Ignorable="d"
        Title="ArchiveWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Обновить" Click="ButtonBase_OnClick"/>
        <ScrollViewer Grid.Row="1">
            <DataGrid x:Name="datagrid_operations"/>
        </ScrollViewer>
    </Grid>
</Window>
